<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavTips"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_hydrology"
                    android:contentDescription="Logo"
                    android:background="@android:color/transparent"
                    android:padding="6dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kiat Hidrasi"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tips untuk hidup lebih sehat"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_bell"
                    app:tint="@color/text_color_secondary"
                    android:contentDescription="Notif" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_bookmark"
                    app:tint="@color/text_color_secondary"
                    android:contentDescription="Bookmark" />
            </LinearLayout>

            <!-- Search -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="#132B45"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:hintTextColor="@color/text_color_secondary"
                android:layout_marginTop="6dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Cari kiat hidrasi..."
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_color_secondary"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:background="@android:color/transparent" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semua"
                    android:checked="true"
                    app:chipCornerRadius="18dp"
                    app:chipBackgroundColor="@color/chip_bg_selector"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconVisible="false"
                    app:chipStrokeColor="@color/text_color_secondary"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sehari-hari"
                    app:chipCornerRadius="18dp"
                    app:chipBackgroundColor="@color/chip_bg_selector"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconVisible="false"
                    app:chipStrokeColor="@color/text_color_secondary"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olahraga"
                    app:chipCornerRadius="18dp"
                    app:chipBackgroundColor="@color/chip_bg_selector"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconVisible="false"
                    app:chipStrokeColor="@color/text_color_secondary"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <!-- List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada tips yang cocok."
                android:textColor="@color/text_color_secondary"
                android:layout_marginTop="14dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavTips"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
