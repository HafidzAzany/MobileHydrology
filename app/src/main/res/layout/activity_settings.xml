<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_primary">

    <!-- HEADER GRADIENT -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/header_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/dark_blue_secondary">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_hydrology"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pengaturan"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sesuaikan preferensi Anda"
                android:textColor="#E0E0E0"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- CONTENT CARD -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/dark_blue_primary"
        android:layout_marginBottom="70dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENGINGAT"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />

                <!-- Card Pengingat -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/dark_blue_secondary"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/iconNotifBg"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bs_rounded_bg"
                                android:backgroundTint="#1AFFFFFF"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignStart="@id/iconNotifBg"
                                android:layout_alignEnd="@id/iconNotifBg"
                                android:src="@drawable/ic_notification"
                                app:tint="@color/cyan_accent"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@id/iconNotifBg"
                                android:layout_marginStart="12dp"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Aktifkan Pengingat Minum"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tvReminderStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Notifikasi aktif"
                                    android:textColor="@color/text_color_secondary"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchReminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="true"
                                app:thumbTint="@color/cyan_accent"
                                app:trackTint="@color/cyan_soft"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider_line"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:id="@+id/layoutFrequency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:id="@+id/iconClockBg"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/bs_rounded_bg"
                                    android:backgroundTint="#1AFFFFFF"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignStart="@id/iconClockBg"
                                    android:layout_alignEnd="@id/iconClockBg"
                                    android:src="@drawable/ic_clock"
                                    app:tint="@color/cyan_accent"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_toEndOf="@id/iconClockBg"
                                    android:layout_marginStart="12dp"
                                    android:layout_centerVertical="true">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Frekuensi Pengingat"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="14sp"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Seberapa sering ingin diingatkan"
                                        android:textColor="@color/text_color_secondary"
                                        android:textSize="12sp"/>
                                </LinearLayout>
                            </RelativeLayout>

                            <Spinner
                                android:id="@+id/spinnerFrequency"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="12dp"
                                android:background="@drawable/input_bg"
                                android:backgroundTint="@color/input_bg"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:popupBackground="@color/dark_blue_secondary"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UKURAN GELAS"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="24dp" />

                <!-- Card Ukuran Gelas -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/dark_blue_secondary"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/iconGlassBg"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bs_rounded_bg"
                                android:backgroundTint="#1AFFFFFF"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:layout_alignStart="@id/iconGlassBg"
                                android:layout_alignEnd="@id/iconGlassBg"
                                android:src="@drawable/ic_glass"
                                app:tint="@color/cyan_accent"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@id/iconGlassBg"
                                android:layout_marginStart="12dp"
                                android:layout_centerVertical="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ukuran Gelas Default"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Volume standar per gelas"
                                    android:textColor="@color/text_color_secondary"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </RelativeLayout>

                        <Spinner
                            android:id="@+id/spinnerGlassSize"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/input_bg"
                            android:backgroundTint="@color/input_bg"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:popupBackground="@color/dark_blue_secondary"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Info Box -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1A4DD0E1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/logo_hydrology"
                            app:tint="@color/cyan_accent"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Pengaturan ini akan mempengaruhi bagaimana aplikasi mengingatkan Anda untuk tetap terhidrasi sepanjang hari."
                            android:textColor="@color/cyan_accent"
                            android:textSize="12sp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- REUSABLE FOOTER -->
    <include
        android:id="@+id/bottomNavLayout"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>