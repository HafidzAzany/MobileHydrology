<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bsRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bs_rounded_bg"
    android:orientation="vertical"
    android:padding="18dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_hydrology"
            android:contentDescription="icon" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            app:tint="#0F172A"
            android:contentDescription="close"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catat Minum"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#0F172A"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih jumlah air yang sudah diminum"
        android:textSize="12sp"
        android:textColor="#64748B"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="14dp"/>

    <!-- Card jumlah -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#F1F8FF"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah yang dipilih"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="#0F172A"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ml"
                android:textSize="12sp"
                android:textColor="#64748B"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Quick options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilihan Cepat"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#0F172A"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuick250"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="+ 250 ml"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginEnd="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuick500"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="+ 500 ml"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginHorizontal="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnQuickGlass"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="+ 1 Gelas"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <!-- Adjust -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sesuaikan Jumlah"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#0F172A"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMinus50"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="âˆ’ 50 ml"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlus50"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="+ 50 ml"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:backgroundTint="#1E6FF2"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="18dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Batal"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Simpan"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:backgroundTint="#1E6FF2"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
