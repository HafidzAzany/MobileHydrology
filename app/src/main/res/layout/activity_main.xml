<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_primary">

    <!-- CONTENT -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="14dp">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/logo_hydrology"
                    android:contentDescription="Logo"
                    android:background="@android:color/transparent"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvAppTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydrology"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kamis, 8 Januari 2026"
                        android:textColor="#CFE3FF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- MAIN CARD -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center_horizontal">

                    <!-- RING PROGRESS -->
                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <ProgressBar
                            android:id="@+id/progressRing"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="60"
                            android:progressDrawable="@drawable/circle_progress" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvCurrentMl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1200"
                                android:textSize="34sp"
                                android:textStyle="bold"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/tvSubMl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ml / 2000 ml"
                                android:textSize="12sp"
                                android:textColor="@color/text_color_secondary" />

                            <TextView
                                android:id="@+id/tvPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60%"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/cyan_accent"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>
                    </FrameLayout>

                    <!-- ADD BUTTON -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddDrink"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_add"
                        app:iconSize="28dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        android:background="@drawable/btn_login_gradient"
                        app:backgroundTint="@null"
                        app:iconTint="@color/dark_blue_primary"
                        android:layout_marginTop="6dp"
                        app:cornerRadius="32dp"
                        android:stateListAnimator="@animator/button_scale_animator"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catat Minum"
                        android:textColor="@color/text_color_secondary"
                        android:textSize="13sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="14dp" />

                    <!-- INFO CARDS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/dark_blue_secondary"
                            android:layout_marginEnd="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Target Harian"
                                    android:textColor="@color/text_color_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvTargetMl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2000 ml"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_marginTop="12dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/dark_blue_secondary"
                            android:layout_marginStart="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tersisa"
                                    android:textColor="@color/text_color_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvRemainingMl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="800 ml"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:layout_marginTop="12dp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
